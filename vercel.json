{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://TU-BACKEND-PUBLICO/api/$1" },
    { "source": "/m", "destination": "https://TU-BACKEND-PUBLICO/m" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
